{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "strict": true,  //採用嚴格模式
    "esModuleInterop": true,  //兼容模組導入的方式
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "lib": [
    "dom",
    "es6",
    "scripthost",
    "es2015.promise",
    "es2015"
  ],
  "exclude": [
    "node_modules"
  ]
}
